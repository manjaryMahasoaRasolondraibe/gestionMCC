{% extends "McriGestBundle::layout.html.twig" %}
{% block title %} Accueil - {{ parent() }} {% endblock %}

{% block mcrigest_body %}
	{% include "McriGestBundle:Gest:flashbag.html.twig" %}

                        <div class="panel-heading">
                             Tableau de STOCK
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
	
							<table class="table table-striped table-bordered table-hover" id="dataTables-example">
								<thead>
									<tr align="center">
										<th width="20%" height=30px>Matériels</th>
										<th width="20%">Type</th>
										<th width="20%">Nombre Initial</th>
										<th width="20%">Utilisé</th>
										<th width="20%">Restant disponible</th>
									</tr>
								</thead>
								<tbody>
									<tr align="left">
										<td width="20%" height=30px colspan="5">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp PC complet</td>
									</tr>
						
									<tr align="center">
										<td width="20%" height=30px></td>
										<td width="20%">PC</td>
										<td width="20%">{{nombrePC}}</td>
										<td width="20%">{{usePC}}</td>
										<td width="20%">{{nombrePC - usePC}}</td>
									</tr>
						
									<tr align="left">
										<td width="20%" height=30px colspan="5">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp Péripheriques</td>
									</tr>
								{% for parcour in affich %}
									<tr align="center">
										<td width="20%" height=30px class="blue"></td>
										<td width="20%">{{parcour.Type}}</td>
										<td width="20%">{{parcour.Nombre}}</td>
										<td width="20%">{{parcour.Used}}</td>
										<td width="20%">{{parcour.Nombre - parcour.Used}}</td>
									</tr>
								{% endfor %}
						
								<tr align="left">
										<td width="20%" height=30px colspan="5">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp Composants</td>
								</tr>
						
								{% for parcour2 in affichcomp %}
									<tr align="center">
										<td width="20%" height=30px></td>
										<td width="20%">{{parcour2.Type}}</td>
										<td width="20%">{{parcour2.Nombre}}</td>
										<td width="20%">{{parcour2.Used}}</td>
										<td width="20%">{{parcour2.Nombre - parcour2.Used}}</td>
									</tr>
								{% endfor %}
								</tbody>
							</table>
							</div>
						</div>
                            
                        

{% endblock %}

